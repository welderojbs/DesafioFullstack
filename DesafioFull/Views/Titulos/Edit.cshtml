@model DesafioFull.Models.Titulos

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar titulo</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NumeroTitulo" class="control-label">Numero Titulo</label>
                <input asp-for="NumeroTitulo" class="form-control" />
                <span asp-validation-for="NumeroTitulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Juros" class="control-label"></label>
                <input asp-for="Juros" class="form-control" />
              
            </div>
            <div class="form-group">
                <label asp-for="Multa" class="control-label"></label>
                <input asp-for="Multa" class="form-control" />
    
            </div>
            <div class="form-group">
                <label asp-for="NParcela" class="control-label"></label>
                <input asp-for="NParcela" class="form-control" />
                <span asp-validation-for="NParcela" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataVencimento" class="control-label"></label>
                <input asp-for="DataVencimento" class="form-control" />
                <span asp-validation-for="DataVencimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorParc" class="control-label"></label>
                <input asp-for="ValorParc" class="form-control" />
              
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><i class="fas fa-arrow-left fa-2x" style=" margin-bottom: -4px; margin-left: 15px; color: #1b1bbdcc;"></i></a>
</div>


