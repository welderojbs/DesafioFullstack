@model DesafioFull.Models.Titulos

@{
    ViewData["Title"] = "Create";
}

<h2>Novo Titulo</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumeroTitulo" class="control-label"> Numero Titulo</label>
                <input asp-for="NumeroTitulo" class="form-control" />
                <span asp-validation-for="NumeroTitulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control" maxlength="10"/>
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Juros" class="control-label"></label>
                <input asp-for="Juros" class="form-control" />
                <span asp-validation-for="Juros" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Multa" class="control-label"></label>
                <input asp-for="Multa" class="form-control" />
                <span asp-validation-for="Multa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NParcela" class="control-label"> Quantidade parcelas</label>
                <input asp-for="NParcela" class="form-control" />
                <span asp-validation-for="NParcela" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataVencimento" class="control-label">Data Vencimento</label>
                <input asp-for="DataVencimento" class="form-control " maxlength="10" onkeypress="mascaraData(this)" />
                <span asp-validation-for="DataVencimento" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="ValorParc" class="control-label"> Valor Total</label>
                <input asp-for="ValorParc" class="form-control" onKeyPress="return(moeda(this,'.',',',event))" />
               
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" /> 
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
